<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_adapk_contain"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@color/bg_trans"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_adapks_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="@string/pingxiaotong_ad_title"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="3.0">


        <LinearLayout
            android:id="@+id/ll_adapk1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_adapk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_push"/>

            <TextView
                android:id="@+id/tv_adapk1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLength="5"
                android:singleLine="true"
                android:text="应用1"
                android:textColor="@color/color_white"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_adapk2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_adapk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_push"/>

            <TextView
                android:id="@+id/tv_adapk2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLength="5"
                android:singleLine="true"
                android:text="应用1"
                android:textColor="@color/color_white"
                android:textSize="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_adapk3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_adapk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_push"/>

            <TextView
                android:id="@+id/tv_adapk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLength="5"
                android:singleLine="true"
                android:text="应用1"
                android:textColor="@color/color_white"
                android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>