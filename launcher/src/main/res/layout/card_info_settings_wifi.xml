<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_wifi_setting"
    app:cardCornerRadius="@dimen/kinflow_dimen_card_corner_radius"
    app:cardBackgroundColor="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <RelativeLayout
        android:id="@+id/wifi_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/native_iv_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:src="@drawable/wifi"/>
        <TextView
            android:id="@+id/native_tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/native_iv_icon"
            android:text="@string/kinflow_string_wifi_setting"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>